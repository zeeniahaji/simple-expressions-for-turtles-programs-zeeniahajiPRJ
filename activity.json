{
    "activities": [
        {
            "id": "activity-edit-grammar",
            "title": "Edit your grammar",
            "icon": "xtext",

            "tools": [ "https://ep.mde-network.org/tools/xtext/xtext_tool.json" ],

            "panels": [
                {
                    "id": "panel-xtext",
                    "name": "Grammar",
                    "ref": "xtext-grammar",
                    "file": "uk.ac.kcl.inf.mdd2.turtles/src/uk/ac/kcl/inf/mdd2/Turtles.xtext",
                    "editorPanel": "panel-turtles",
                    "editorActivity": "activity-turtles-editor"
                },
                {
                    "id": "panel-console",
                    "name": "Console",
                    "ref": "console"
                }
            ],

            "layout": {
                "area": [
                    ["panel-xtext" ],
                    ["panel-console" ]
                ]
            },

            "actions": [
                {
                    "source": "panel-xtext",

                    "sourceButton": "action-button",

                    "parameters": {
                        "languageName": "uk.ac.kcl.inf.mdd2.turtles.Turtles",
                        "baseName": "uk.ac.kcl.inf.mdd2.turtles",
                        "extension": "turtles",
                        "grammar": "panel-xtext"
                    },

                    "output": "panel-console"
                }
            ]
        },

        {
            "id": "activity-turtles-editor",
            "title": "Turtles Editor",
            "icon": "xtext",

            "tools": [
                "{{ID-panel-turtles}}/editor_tool.json", 
                "https://ep.mde-network.org/tools/emf/emf_tool.json",
                "https://ep.mde-network.org/tools/emfatic/emfatic_tool.json",
                "https://ep.mde-network.org/tools/epsilon/tools"
            ],

            "panels": [
                {
                    "id": "panel-turtles",
                    "name": "Try out your language here",
                    "ref": "xtext-editor",
                    "file": "example/test.turtles",
                    "extension": "turtles",
                    "buttons": [{"ref": "to-diagram-button"}]
                },
                {
                    "id": "panel-mm-composite",
                    "name": "The meta-model generated by Xtext",
                    "ref": "composite",
                    "childPanels": [
                        {
                            "id": "panel-mm",
                            "name": "XMI text format",
                            "ref": "ecore",
                            "file": "{{ID-panel-turtles}}/xtext-resources/generated/meta-model.ecore"
                        },
                        {
                            "id": "panel-diagram",
                            "name": "Metamodel Diagram",
                            "ref": "emfgraph"
                        }
                    ],
                    "buttons": [
                        {
                            "id": "show-xmi-button",
                            "icon": "editor",
                            "internal": "toggle",
                            "targetPanel": "panel-mm",
                            "hint": "Toggle text"
                        },
                        {
                            "id": "show-diagram-button",
                            "icon": "diagram",
                            "internal": "toggle",
                            "targetPanel": "panel-diagram",
                            "hint": "Toggle diagram"
                        }
                    ]
                },
                {
                    "id": "panel-model-diagram",
                    "name": "Model Diagram",
                    "ref": "emfgraph"
                }
            ],

            "layout": {
                    "area": [["panel-turtles", "panel-model-diagram"],
                            ["panel-mm-composite"]]
            },

            "actions": [
                {
                    "source": "panel-mm",
                    "sourceButton": "to_mm_diagram",

                    "parameters": {
                        "language": "generated",
                        "emfatic": "panel-mm"
                    },

                    "output": "panel-diagram"
                },
                {
                    "source": "panel-turtles",
                    "sourceButton": "to-diagram-button",
                    "parameters": {
                        "input": "panel-turtles"
                    },
                    "output": "panel-model-diagram"
                }
            ]
        }   
    ] 
} 
